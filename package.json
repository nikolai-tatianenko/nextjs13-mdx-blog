{
  "name": "nextjs13-mdx-blog",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "npx lerna run dev --stream",
    "format": "npx prettier --write .",
    "lint-format": "npx lerna run lint-format",
    "lint:format": "eslint . --fix && prettier --write . && npm run lint-format",
    "commit": "npx cz",
    "graph": "npx nx graph",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "npm run lint:format"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikolai-tatianenko/nextjs13-mdx-blog.git"
  },
  "author": "Nikolai Tatianenko <nikolai.tatianenko@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikolai-tatianenko/nextjs13-mdx-blog/issues"
  },
  "homepage": "https://github.com/nikolai-tatianenko/nextjs13-mdx-blog#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lerna": "^7.0.2",
    "prettier": "^2.8.8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "workspaces": [
    "packages/*",
    "web"
  ],
  "dependencies": {
    "next-themes": "^0.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
